{
  "name": "img-contextual",
  "displayName": "Image To Base64 clipboard",
  "description": "Adds to contextual menu encode to base 64 and set into the clipboard",
  "keywords": [
    "Base64",
    "Images",
    "Encode",
    "Decode",
    "Clipboard",
    "Preview"
  ],
  "icon": "images/encoder.png",
  "license": "SEE LICENSE IN LICENSE",
  "publisher": "green-csv",
  "repository": "https://github.com/Asxom/img-contextual",
  "version": "0.2.9",
  "engines": {
		"vscode": "^1.74.0"
	},
  "activationEvents": [],
  "galleryBanner": {
    "color": "#2C3E50",
    "theme": "dark"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "main": "./dist/extension",
  "contributes": {
    "commands": [
      {
        "command": "img-contextual.encodeToB64",
        "title": "Encode: to base64",
        "category": "Encode"
      },
      {
        "command": "img-contextual.encodeTextToB64",
        "title": "Text to base64",
        "category": "Encode"
      },
      {
        "command": "img-contextual.decodeB64ToAscii",
        "title": " Base64 to Ascii",
        "category": "Encode"
      },
      {
        "command": "img-contextual.previewB64",
        "title": "Preview base64 image",
        "category": "Encode"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "img-contextual.encodeToB64",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "command": "img-contextual.encodeToB64",
          "when": "resourceLangId == encodingImgTargetFile && !listMultiSelection"
        },
        {
          "command": "img-contextual.encodeTextToB64",
          "when": "false"
        },
        {
          "command": "img-contextual.decodeB64ToAscii",
          "when": "false"
        },
        {
          "command": "img-contextual.previewB64",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "command": "img-contextual.encodeTextToB64",
          "when": "editorTextFocus",
          "group": "Encode"
        },
        {
          "command": "img-contextual.decodeB64ToAscii",
          "when": "editorTextFocus",
          "group": "Encode"
        },
        {
          "command": "img-contextual.previewB64",
          "when": "editorTextFocus",
          "group": "Encode"
        }
      ]
    },
    "languages": [
      {
        "id": "encodingImgTargetFile",
        "extensions": [
          ".png",
          ".jpg",
          ".jpeg",
          ".gif",
          ".webp",
          ".ico"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
    "test-compile": "tsc -p ./",
    "lint": "eslint . --ext .ts,.tsx",
    "watch": "tsc -watch -p ./",
    "publish": "vsce package && vsce publish"
  },
  "devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/node": "^20",
		"@types/vscode": "^1.73.0",
		"eslint": "^9.13.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	},
  "dependencies": {
    "file-type": "14.6.1",
    "jshint": "^2.13.1",
    "vscode-nls-dev": "^4.0.0"
  }
}
