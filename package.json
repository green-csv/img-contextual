{
  "name": "img-contextual",
  "displayName": "Image To Base64 clipboard",
  "description": "Adds to contextual menu encode to base 64 and set into the clipboard",
  "keywords": [
    "Base64",
    "Images",
    "Encode",
    "Decode",
    "Clipboard",
    "Preview"
  ],
  "icon": "images/encoder.png",
  "license": "SEE LICENSE IN LICENSE",
  "publisher": "green-csv",
  "repository": "https://github.com/Asxom/img-contextual",
  "version": "0.2.9",
  "engines": {
		"vscode": "^1.74.0"
	},
  "activationEvents": [    
    "onLanguage:encodingImgTargetFile" 
  ],
  "galleryBanner": {
    "color": "#2C3E50",
    "theme": "dark"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "img-contextual.encodeToB64",
        "title": "Base64: Encode File",
        "category": "Base64"
      },
      {
        "command": "img-contextual.encodeTextToB64",
        "title": "Base64: Encode Selected Text",
        "category": "Base64"
      },
      {
        "command": "img-contextual.decodeB64ToAscii",
        "title": "Base64: Decode to ASCII Text",
        "category": "Base64"
      },
      {
        "command": "img-contextual.previewB64",
        "title": "Base64: Preview Encoded Image",
        "category": "Base64"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "img-contextual.encodeToB64",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "command": "img-contextual.encodeToB64",
          "when": "resourceLangId == encodingImgTargetFile && !listMultiSelection"
        },
        {
          "command": "img-contextual.encodeTextToB64",
          "when": "false"
        },
        {
          "command": "img-contextual.decodeB64ToAscii",
          "when": "false"
        },
        {
          "command": "img-contextual.previewB64",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "command": "img-contextual.encodeTextToB64",
          "when": "editorTextFocus",
          "group": "Encode"
        },
        {
          "command": "img-contextual.decodeB64ToAscii",
          "when": "editorTextFocus",
          "group": "Encode"
        },
        {
          "command": "img-contextual.previewB64",
          "when": "editorTextFocus",
          "group": "Encode"
        }
      ]
    },
    "languages": [
      {
        "id": "encodingImgTargetFile",
        "extensions": [
          ".png", ".jpg", ".jpeg", ".gif", ".webp", ".ico", ".svg", ".woff", ".woff2", ".ttf", ".mp3", ".ogg", ".mp4", ".pdf", ".json", ".html"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
    "test-compile": "tsc -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "watch": "tsc -watch -p ./",
    "publish": "vsce package && vsce publish"
  },
  "devDependencies": {
		"@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
	}
}
